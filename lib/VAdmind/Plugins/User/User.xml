<plugin name="User" group="User" version="1.0">
	<author	name="Urivan Flores-Saaib" email="urivan (at) saaib.net"/>
	<task	name="add">
		<data>
			<login		length="8"	type="req"/>
			<uid		length="5"	type="opt"/>
			<gid		length="5"	type="opt"/>
			<groups		length="250"	type="opt"/>
			<desc		length="40"	type="opt"/>
			<shell		length="20"	type="opt"/>
			<pass		length="16"	type="opt"/>
		</data>
	</task>
	<task	name="del">
		<data>
			<login		length="8"	type="req"/>
			<remove		length="1"	type="opt"/>
		</data>
	</task>
	<task	name="edit">
		<data>
			<login		length="8"	type="req"/>
			<uid		length="5" type="opt"/>
			<gid		length="5" type="opt"/>
			<groups		length="250" type="opt"/>
			<desc		length="40" type="opt"/>
			<shell		length="20" type="opt"/>
			<pass		length="16" type="opt"/>
			<new_login	length="8"  type="opt"/>
		</data>
	</task>
</plugin>
