<plugin name="User" version="1.0">
	<author name="Urivan Alyasid Flores Saaib" email="saaib@ciberlinux.net"/>
	<task name="add">
		<data>
			<login    length="8"  type="req"/>
			<uid      length="5"  type="opt"/>
			<gid      length="5"  type="opt"/>
			<name     length="40" type="opt"/>
			<shell    length="20" type="opt"/>
			<pass     length="16" type="opt"/>
		</data>
	</task>
	<task name="del">
		<data>
			<login length="8" type="req"/>
			<rm_home length="1" type="opt"/>
			<rm_mail length="1" type="opt"/>
		</data>
	</task>
	<task name="edit">
		<data>
			<login length="8" type="req"/>
			<uid length="5" type="opt"/>
			<gid length="5" type="opt"/>
			<name length="40" type="opt"/>
			<shell length="20" type="opt"/>
			<pass length="16" type="opt"/>
			<newlogin length="8"  type="opt"/>
		</data>
	</task>
</plugin>
